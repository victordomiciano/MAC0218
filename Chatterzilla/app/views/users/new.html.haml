- provide(:title, 'Sign up')
%h1 Sign up
.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = f.label :login
      = f.text_field :login
      = f.label :email
      = f.email_field :email
      = f.label :password
      = f.password_field :password
      = f.submit "Create my account", class: "btn btn-primary"



#boxImage
  =image_tag "godzillaResized.jpg"