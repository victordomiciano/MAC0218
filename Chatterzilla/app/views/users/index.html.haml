- provide(:title, 'All users')
%body
  .container
    %h1 All users
    = will_paginate
    %ul.users
      - @users.each do |user|
        %li
          = gravatar_for user, size: 50
          = link_to user.login, user
          = link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation", "data-sid" => current_user.login, "data-rip" => user.login
    = will_paginate
